@model MagicMVC.Models.Purchase


@{
    ViewData["Title"] = "Add To Cart";
}

<h2>Add to Shopping Cart</h2>

<h4>Select Quantity to add</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoreID" />
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <label asp-for="QuantityToPurchase" class="control-label"></label>
                <input asp-for="QuantityToPurchase" class="form-control" />
                <span asp-validation-for="QuantityToPurchase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add to Shopping Cart" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
