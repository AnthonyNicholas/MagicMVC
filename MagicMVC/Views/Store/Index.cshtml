@model IEnumerable<MagicMVC.Models.StoreInventory>

@{
    ViewData["Title"] = "Store Inventory";

}

<h2>Store Inventory</h2>

<form method="get">
    <p>
        Product Name: <input name="productName" value="@ViewData["ProductName"]" />
        <input type="submit" value="Filter" />
    </p>
</form>

<form method="get">
    <p>
        Get items below threshold: 
        <input name="threshold" value="@ViewData["Threshold"]" />
        <input type="submit" value="Filter" />
    </p>
</form>

<p>
    <a asp-action="MakeStockRequest">Request New Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Store.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Store.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockLevel)
            </td>
            <td>
                @Html.ActionLink("Request", "MakeStockRequest", new { id = item.ProductID })
            </td>
        </tr>
       }
    </tbody>
</table>
