@using MagicMVC.Data;
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Melbourne Magic</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    @if (User.IsInRole(Constants.OwnerRole))
                    {
                        <li><a asp-area="" asp-controller="OwnerInventory" asp-action="Index">Owner Inventory</a></li>
                        <li><a asp-area="" asp-controller="StockRequests" asp-action="Index">View Stock Requests</a></li>
                    }

                    @if (User.IsInRole(Constants.FranchiseeRole))
                    {

                        <li><a asp-area="" asp-controller="Store" asp-action="Index">Store Inventory</a></li>
                    }

                    @if (User.IsInRole(Constants.CustomerRole))
                    {
                        <li><a asp-area="" asp-controller="Customer" asp-action="Index">Browse Products</a></li>
                        <li><a asp-area="" asp-controller="ShoppingCart" asp-action="Index">Your Cart</a></li>
                    }

                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
